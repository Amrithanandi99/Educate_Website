<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
  
  <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css">
  
</head>
<div class="container-fluid row">
  <div class="">
    <%- include('header.ejs') %>
  </div>

  <div class="col-3">
    <%- include('left.ejs') %>  
  </div>
 
 

<div class="col-md-9">
  <div class="container mt-3">
    <h2>VIEW Added Course</h2>
    <% if(adddata.length>0){ %>
    <table id="myTable" class="table table-striped table-sm" >
      <thead>
        <tr>
          <th>Subject Name</th>
          <th>Subject Code</th>
          <th>Subject Description</th>
          <th>Product image</th>
          <th>Subject Category</th>
          <th>Edit</th>
          <th>Delete</th>
          
          
          
        </tr>
      </thead>
      <tbody>
        <%for(var i=0; i<adddata.length; i++){%>
          <tr>
            <td><%= adddata[i].subjectname %></td>
            <td><%= adddata[i].subjectcode %></td>
            <td><%= adddata[i].subjectdescription %></td>
            <td><img style="width: 50px; height: 50px;" src="<%= adddata[i].customfile %>"></td>
            <td><%= adddata[i].subjectcategory %></td>

            <td><a href="/edit_1/<%= adddata[i]._id %>"> <button class="btn ">Edit</button></a></td>
            <td><a href="/delete_1/<%= adddata[i]._id %>"> <button class="btn ">Delete</button></a></td>

          </tr><%} %>
      </tbody>
    </table>
  <% } else{ %>
  No record found
<%} %>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>

	<script>
   new DataTable('#myTable'),
   {
    search: {
        return: true
    }

};
  </script>
